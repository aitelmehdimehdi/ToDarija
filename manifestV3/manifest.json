{
  "manifest_version": 3,
  "name": "Darija Translator",
  "version": "1.1",
  "description": "A clean translator interface with text selection capture",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "clipboardWrite",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}